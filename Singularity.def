Bootstrap: docker
From: rocker/shiny-verse:latest
Stage: spython-base

%files
install_packages.R .
MAVEN/ ./MAVEN
%post
# Base image https://hub.docker.com/u/rocker/

# system libraries of general use
## install debian packages
apt-get update -qq && apt-get -y --no-install-recommends install \
libxml2-dev \
libsqlite3-dev \
libpq-dev \
libssh2-1-dev \
unixodbc-dev \
libcurl4-openssl-dev \
libssl-dev \
libglpk40 \
default-jdk \
r-cran-rjava

## update system libraries
apt-get update && \
apt-get upgrade -y && \
apt-get clean


## run package installation script
Rscript install_packages.R

# expose port
# EXPOSE 3838

# run app on container start
%runscript
exec /bin/bash R -e shiny::runApp('/MAVEN', host = '0.0.0.0', port = 3838) "$@"
%startscript
exec /bin/bash R -e shiny::runApp('/MAVEN', host = '0.0.0.0', port = 3838) "$@"
